<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgProfileReceivedImage"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/background_image"
        app:riv_oval="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/imageReceived"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:padding="@dimen/_12sdp"
        app:layout_constraintLeft_toRightOf="@id/imgProfileReceivedImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:maxWidth="@dimen/_200sdp"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/timeImageReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintTop_toBottomOf="@id/imageReceived"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintLeft_toLeftOf="@id/imageReceived"
        android:layout_marginTop="@dimen/_4sdp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>