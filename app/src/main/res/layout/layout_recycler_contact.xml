<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="UserContact"
            type="com.example.chatapp.model.User" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="horizontal"
    android:id="@+id/layout_recycler_contact">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgContact"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/email"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:scaleType="centerCrop"
        app:riv_oval="true"/>
    <TextView
        android:id="@+id/nameContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:fontFamily="@font/poppins_medium"
        android:text="@{UserContact.username}"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:layout_alignLeft="@id/imgContact"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_60sdp"/>

    <TextView
        android:id="@+id/emailContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/nameContact"
        android:layout_alignLeft="@id/imgContact"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="@{UserContact.email}"
        android:textAlignment="textStart"
        android:textColor="#8F8F8F"
        android:textSize="@dimen/_12sdp" />


</RelativeLayout>
</layout>