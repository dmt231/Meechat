<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="User_New_Group"
            type="com.example.chatapp.model.User" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal"
        android:id="@+id/layout_recycler_share">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgContactShare"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/email"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:riv_oval="true"/>
        <TextView
            android:id="@+id/nameContactShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:fontFamily="@font/poppins_medium"
            android:text="@{User_New_Group.username}"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:layout_alignStart="@id/imgContactShare"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_60sdp"/>
        <RadioButton
            android:id="@+id/buttonShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_search"
            android:backgroundTint="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"/>
    </RelativeLayout>
</layout>