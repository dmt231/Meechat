<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/round_arrow_back_ios_new_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/nickname"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_20sdp">

        <RelativeLayout
            android:id="@+id/user1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageUser1"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_30sdp"
                app:riv_oval="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/background" />

            <TextView
                android:id="@+id/userName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_70sdp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/color_theme"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp" />

            <TextView
                android:id="@+id/nickName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_70sdp"
                android:fontFamily="sans-serif-medium"
                android:layout_alignTop="@id/userName1"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="@string/set_nickname"
                android:textSize="@dimen/_12ssp" />
            <View
                android:layout_width="@dimen/_230sdp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/_70sdp"
                android:layout_alignTop="@id/nickName1"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@color/lightGray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageUser2"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                android:contentDescription="@string/background" />

            <TextView
                android:id="@+id/userName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_70sdp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/color_theme"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp" />

            <TextView
                android:id="@+id/nickName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_70sdp"
                android:fontFamily="sans-serif-medium"
                android:layout_alignTop="@id/userName2"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="@string/set_nickname"
                android:visibility="invisible"
                android:textSize="@dimen/_12ssp" />

        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>