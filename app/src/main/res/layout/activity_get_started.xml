<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash.GetStarted"
    android:background="@drawable/background_splash">
    <ImageView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_110sdp"
        android:background="@drawable/messenger" />
    <TextView
        android:id="@+id/txtConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_240sdp"
        android:text="Connect With People"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"
        android:textColor="#282828"
        android:textSize="@dimen/_20ssp"/>
    <TextView
        android:id="@+id/txtContent"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_130sdp"
        android:text="The application will help you to connect with people by using the message.Chatting apps make it easier, simpler, and faster to connect with everyone and it is also easy to use."
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        android:textColor="#8F8F8F"
        android:textSize="@dimen/_14ssp"/>
    <Button
        android:id="@+id/btnStart"
        android:background="@drawable/custom_button"
        android:layout_width="@dimen/_282sdp"
        android:layout_height="@dimen/_70sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_40sdp"
        android:elevation="@dimen/_10sdp"
        android:text="Get Started"
        android:textSize="@dimen/_18ssp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>