<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_gradient">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_centerVertical="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/round_arrow_back_ios_new_24" />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageSettingChat"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_30sdp"
        app:riv_oval="true"
        android:scaleType="centerCrop"
        android:background="@drawable/messenger"/>
    <TextView
        android:id="@+id/nameSettingChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textSize="@dimen/_19ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageSettingChat"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_90sdp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameSettingChat"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="@dimen/_30sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/Theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/recentThemePicked"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/background_image"
                    android:contentDescription="@string/background"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_20sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color_theme"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_70sdp"/>
                <View
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="1dp"
                    android:background="@color/lightGray"
                    android:layout_marginStart="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_55sdp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/Emoji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/recentEmojiPicked"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/like"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/background"
                    app:riv_oval="true"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_20sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fast_emoji"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_70sdp"/>
                <View
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="1dp"
                    android:background="@color/lightGray"
                    android:layout_marginStart="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_55sdp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/MediaStore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/baseline_image_24"
                    android:backgroundTint="@color/black"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/background"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_20sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storage"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_70sdp"/>
                <View
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="1dp"
                    android:background="@color/lightGray"
                    android:layout_marginStart="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_55sdp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/Nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:text="Aa"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textAlignment="center"
                    android:layout_marginStart="@dimen/_20sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nickname"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_70sdp"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>