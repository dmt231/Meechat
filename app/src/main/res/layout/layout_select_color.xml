<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/select_the_theme_color_for_this_conservation"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp" />
            <ImageView
                android:id="@+id/currentTheme"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_60sdp"
                android:contentDescription="@string/currentTheme"
                android:background="@drawable/background_image"/>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignTop="@id/currentTheme"
                android:layout_marginTop="@dimen/_45sdp"
                android:background="@color/hintColor" />
            <ImageView
                android:id="@+id/colorRed"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignTop="@id/line"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:contentDescription="@string/red"
                android:background="@drawable/background_image"
                android:backgroundTint="@color/Red"/>
            <ImageView
                android:id="@+id/colorPink"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignTop="@id/line"
                android:layout_alignStart="@+id/colorRed"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_image"
                android:backgroundTint="@color/darkPink"
                android:contentDescription="@string/pink"/>
            <ImageView
                android:id="@+id/colorYellow"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignTop="@id/line"
                android:layout_alignStart="@+id/colorPink"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_image"
                android:backgroundTint="@color/lightYellow"
                android:contentDescription="@string/yellow"/>
            <ImageView
                android:id="@+id/colorLightBlue"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignTop="@id/line"
                android:layout_alignStart="@+id/colorYellow"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_image"
                android:backgroundTint="@color/lightBlue"
                android:contentDescription="@string/lightBlue"/>
            <ImageView
                android:id="@+id/colorOrange"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignTop="@id/line"
                android:layout_alignStart="@+id/colorLightBlue"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_image"
                android:backgroundTint="@color/Orange"
                android:contentDescription="@string/orange"/>
            <ImageView
                android:id="@+id/colorLightBrown"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignTop="@id/line"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:background="@drawable/background_image"
                android:backgroundTint="@color/lightBrown"
                android:contentDescription="@string/lightBrown"/>
            <ImageView
                android:id="@+id/colorLightGray"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignTop="@id/line"
                android:layout_alignStart="@id/colorLightBrown"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:background="@drawable/background_image"
                android:backgroundTint="@color/lightGray"
                android:contentDescription="@string/lightGray"/>
            <ImageView
                android:id="@+id/colorDarkGray"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignTop="@id/line"
                android:layout_alignStart="@id/colorLightGray"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:background="@drawable/background_image"
                android:backgroundTint="@color/DarkGray"
                android:contentDescription="@string/darkGray"/>
            <ImageView
                android:id="@+id/colorGreen"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignTop="@id/line"
                android:layout_alignStart="@id/colorDarkGray"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:background="@drawable/background_image"
                android:backgroundTint="@color/Green"
                android:contentDescription="@string/green"/>
            <ImageView
                android:id="@+id/colorBackground"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignTop="@id/line"
                android:layout_alignStart="@id/colorGreen"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:background="@drawable/background_image"
                android:backgroundTint="@color/themeBackground"
                android:contentDescription="@string/blue"/>
            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignTop="@id/line"
                android:layout_marginTop="@dimen/_120sdp"
                android:background="@color/hintColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignTop="@+id/line2"
                android:layout_marginTop="@dimen/_1sdp"
                >
                <Button
                    android:id="@+id/btnSelect"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="0.4"
                    android:text="@string/btnSelect"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#1A5FD3"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@color/white"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/hintColor"/>

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="0.4"
                    android:background="@color/white"
                    android:text="@string/btnCancel"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#DF1818"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>