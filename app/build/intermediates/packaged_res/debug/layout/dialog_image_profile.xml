<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_cardview"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/SeeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/background_image"
            android:backgroundTint="#E4E4E4"
            android:layout_centerVertical="true"
            android:contentDescription="@string/background"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_20sdp"/>
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:contentDescription="@string/photos"
            android:background="@drawable/baseline_image_24"
            android:backgroundTint="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_30sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_your_image_profile"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_80sdp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/SelectImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/background_image"
            android:backgroundTint="#E4E4E4"
            android:layout_centerVertical="true"
            android:contentDescription="@string/background"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_20sdp"/>
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:contentDescription="@string/photos"
            android:background="@drawable/round_photo_camera_24"
            android:backgroundTint="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_30sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_your_image_profile"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_80sdp"/>
    </RelativeLayout>
</LinearLayout>