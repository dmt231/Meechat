<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_detail_image"
    android:background="@drawable/white_gradient">

    <ImageView
        android:id="@+id/cancelImage"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/baseline_cancel_24"
        android:backgroundTint="@color/themeBackground"/>
    <ImageView
        android:id="@+id/downloadImage"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_220sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/baseline_file_download_24"
        android:backgroundTint="@color/themeBackground"/>
    <ImageView
        android:id="@+id/optionShare"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_260sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/baseline_ios_share_24"
        android:backgroundTint="@color/themeBackground"/>
    <ImageView
        android:id="@+id/detailImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/background_detail_image"
        android:scaleType="centerCrop"
        android:src="@drawable/messenger"
        />
</RelativeLayout>